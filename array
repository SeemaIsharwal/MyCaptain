 #include <stdio.h>

int main()
{
    int arr[3][3];
    int i,j, sum;
     int * ptr = arr;    // Pointer to arr
    

 
  printf("Input elements in the matrix :\n");
  for(i=0;i<3;i++)
  {
          for(j=0;j<3;j++)
      {
	      printf("element - [%d],[%d] : ",i,j);
	      scanf("%d",&arr[i][j]);
      }
      ptr++;
  }  
  
 
    
    printf("\nThe matrix is : \n");
  for(i=0;i<3;i++)
  {
      printf("\n");
      for(j=0;j<3;j++)
      {
           printf("%d\t",arr[i][j]);
           }
           ptr++;
  }
 printf("\n\n");


  
if(i==j)
                 {
                      sum+=arr[i][j];
                  
                              
     printf("Sum of Diagonal Elements = %d ",sum);
     }
  
return 0;
  }
  
